{
    "entrypoint": "index.html",
    "shell": "src/rmc-shell.html",
    "fragments": [
        "src/views/view-home.html",
        "src/views/view-about.html",
        "src/views/view-capabilities.html",
        "src/views/view-contact.html",
        "src/views/view-404.html"
    ],
    "sources": [
        "src/**/*",
        "images/**/*",
        "package.json"
    ],
    "extraDependencies": [
        "node_modules/bootstrap/dist/js/bootstrap.min.js",
        "node_modules/jquery/dist/jquery.slim.min.{js, map}",
        "node_modules/tether/dist/js/tether.min.js",
        "node_modules/@npm-polymer/webcomponentsjs/*.{js, js.map}",
		"js/**/*",
        "manifest.json",
        ".htaccess",
        "mail.php"
    ],
    "lint": {
        "rules": ["polymer-2"],
        "ignoreWarnings": []
    },
    "builds": [{
		"preset": "es5-bundled",
		"addServiceWorker": true
    }]
}
