{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "require-jsdoc": "off",
	"linebreak-style": 0,
    "max-len": ["error", { "ignoreComments": true, "ignoreStrings": true }],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }]
  },
  "globals": {
    "Polymer": true
  }
}
