{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "require-jsdoc": "off",
	"linebreak-style": 0,
    "max-len": ["error", { "ignoreComments": true, "ignoreStrings": true }]
  },
  "globals": {
    "Polymer": true
  }
}
